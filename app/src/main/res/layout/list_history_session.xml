<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, 28 March 2023"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workout_type_week_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squat - Week 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/training_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TM 100.0 kg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_type_week_count" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/training_max" />

    <TextView
        android:id="@+id/set_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view" />

    <TextView
        android:id="@+id/set_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_1" />

    <TextView
        android:id="@+id/set_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_2" />

    <TextView
        android:id="@+id/bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BBB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_3" />

    <TextView
        android:id="@+id/set_1_weight_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="65.0 kg x 5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view" />

    <TextView
        android:id="@+id/set_2_weight_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75.0 kg x 5"
        app:layout_constraintStart_toStartOf="@+id/set_1_weight_reps"
        app:layout_constraintTop_toBottomOf="@+id/set_1_weight_reps" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85.0 kg x 7"
        app:layout_constraintStart_toStartOf="@+id/set_2_weight_reps"
        app:layout_constraintTop_toBottomOf="@+id/set_2_weight_reps" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.0 kg x 10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>